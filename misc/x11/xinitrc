# Set background
feh --bg-scale ~/.wallpaper

# Setup some x prefs
xset r rate 330 45 &
xset -b
xrfb ~/.Xresources

exec xsetroot -cursor_name left_ptr &
exec unclutter -idle 1 -root &
exec keynav &

# Autostart some apps
exec ~/.dropbox-dist/dropboxd &
exec /usr/bin/volumeicon &
exec /usr/bin/twmnd &

exec i3 -V &> ~/.local/logs/i3.log
