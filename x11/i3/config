# i3 config file
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Globals {
    # Set the global mod key
    set $mod Mod1
    set $modalt Mod4

    # Use Mouse+$mod to drag floating windows to their wanted position
    floating_modifier $mod
# }

# Font {
    font pango: inconsolata 14px
# }

# Auto movez {
    for_window [title=".*Firefox.*"] move container to workspace www; workspace www
    for_window [title=".*Chromium.*"] move container to workspace www; workspace www
    for_window [title="^main@.*"] move container to workspace tmux; workspace tmux
    for_window [title="^HipChat*"] move container to workspace hipchat; workspace hipchat
    for_window [title="^Spotify Premium.*"] move container to workspace spotify; workspace spotify
# }

# Application launchers {
    # ror = run_or_raise
    set $ror /home/nicke/.local/utilities/ror
    # mor = mux_or_raise
    set $mor /home/nicke/.local/utilities/mor

    # start dmenu (a program launcher)
    bindsym $mod+d exec dmenu_run
    bindsym $mod+space exec dmenu_run

    # start a terminal
    bindsym $mod+Return exec $mor main
    bindsym $mod+$moda<=+Return exec urxvt

    # open a browser
    bindsym $mod+Shift+Return exec $ror "chromium" "Chromium" "chromium"

    # open a file manager
    bindsym $mod+Shift+d exec pcmanfm
    bindsym $mod+$modalt+Shift+d exec pcmanfm /home/nicke/Desktop
    bindsym $mod+$modalt+Control+Shift+d exec pcmanfm /home/nicke/Downloads
# }

# Volume control {
    bindsym $mod+$modalt+plus exec pulseaudio-ctl up
    bindsym $mod+$modalt+minus exec pulseaudio-ctl down
# }

# Volume brightness {
    bindsym $mod+$modalt+1 exec xbacklight -set 10
    bindsym $mod+$modalt+2 exec xbacklight -set 20
    bindsym $mod+$modalt+3 exec xbacklight -set 30
    bindsym $mod+$modalt+4 exec xbacklight -set 40
    bindsym $mod+$modalt+5 exec xbacklight -set 50
    bindsym $mod+$modalt+6 exec xbacklight -set 60
    bindsym $mod+$modalt+7 exec xbacklight -set 70
    bindsym $mod+$modalt+8 exec xbacklight -set 80
    bindsym $mod+$modalt+9 exec xbacklight -set 90
# }

# Screenshots {
    # Grab whole screen
    bindsym $mod+$modalt+Shift+3 exec scrot '%Y-%m-%d_%H-%M-%S_$wx$h.png' -e 'mv $f ~/Downloads/'

    # Grab area
    bindsym $mod+$modalt+Shift+4 exec scrot -s '%Y-%m-%d_%H-%M-%S_$wx$h.png' -e 'mv $f ~/Downloads/'
# }

# Window navigation {
    # Focus
    bindsym $mod+h focus left
    bindsym $mod+j focus down
    bindsym $mod+k focus up
    bindsym $mod+l focus right
    bindsym $mod+u focus parent
    bindsym $mod+b focus child

    # move focused window
    bindsym $mod+Shift+h move left
    bindsym $mod+Shift+j move down
    bindsym $mod+Shift+k move up
    bindsym $mod+Shift+l move right

    # Move Container
    bindsym $mod+$modalt+Shift+h focus parent; move left
    bindsym $mod+$modalt+Shift+j focus parent; move down
    bindsym $mod+$modalt+Shift+k focus parent; move up
    bindsym $mod+$modalt+Shift+l focus parent; move right

    # Snap
    bindsym $mod+$modalt+h layout default
    bindsym $mod+$modalt+j layout toggle split
    bindsym $mod+$modalt+k layout stacking
    bindsym $mod+$modalt+l layout tabbed

    # Fullscreen
    bindsym $mod+f fullscreen

    # Splitting
    bindsym $mod+s split horizontal
    bindsym $mod+z split vertical

    # Kill focused window
    bindsym $mod+Shift+q kill

    # Resize
    mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym h resize shrink width 3 px or 3 ppt
        bindsym j resize grow height 3 px or 3 ppt
        bindsym k resize shrink height 3 px or 3 ppt
        bindsym l resize grow width 3 px or 3 ppt

        bindsym Shift+h resize shrink width 10 px or 10 ppt
        bindsym Shift+j resize grow height 10 px or 10 ppt
        bindsym Shift+k resize shrink height 10 px or 10 ppt
        bindsym Shift+l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"

        # Move to center
        bindsym $mod+c move absolute position center
    }
    bindsym $mod+r mode "resize"
# }

# Workspace navigation {
    # switch to workspace
    bindsym $mod+1 workspace www
    bindsym $mod+2 workspace tmux
    bindsym $mod+3 workspace spotify
    bindsym $mod+4 workspace hipchat
    bindsym $mod+5 workspace misc

    # move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace www
    bindsym $mod+Shift+2 move container to workspace tmux
    bindsym $mod+Shift+3 move container to workspace spotify
    bindsym $mod+Shift+4 move container to workspace hipchat
    bindsym $mod+Shift+5 move container to workspace misc

    # Allow for workspace togle navigation
    # workspace_auto_back_and_forth yes
# }

# Floating options {
    # toggle tiling / floating
    bindsym $mod+$modalt+space floating toggle
    # change focus between tiling / floating windows
    bindsym $mod+$modalt+f focus mode_toggle

    # Move to center
    bindsym $mod+c move absolute position center
# }

# Scratchpad {
    # Make the currently focused window a scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the first scratchpad window
    bindsym $mod+minus scratchpad show
# }

# System stuff {
    # reload the configuration file
    bindsym $mod+Shift+r reload

    # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
    bindsym $mod+$modalt+Shift+r restart

    # exit i3 (logs you out of your X session)
    # bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
    bindsym $mod+Shift+e exit

    # Border
    bindsym $mod+y border normal
    bindsym $mod+Shift+y border 1pixel
    bindsym $mod+$modalt+Shift+y border none
# }

# Colors and such {
    # accually borders plx
    new_window pixel 2
    # workspace_layout default

    set $active #47628f
    set $inactive #333333
    set $semiactive #414957
    set $urgent #942C2C
    set $indicator #979876
    set $gray #f6f6f6
    set $dark #707070
    set $background #101010

    client.focused          $active $active $gray $indicator
    client.focused_inactive $semiactive $semiactive $gray $inactive
    client.unfocused        $inactive $inactive $dark $inactive
    client.urgent           $urgent $urgent $gray $inactive
    client.background       $background
# }

