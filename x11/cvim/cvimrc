" Keybindings {{{

" Tab management
unmap d
map d :closeTab<CR>
map u :undo<CR>
map U :restore<Space>
map zh :previousTab<CR>
map zl :nextTab<CR>
map zj :firstTab<CR>
map zk :lastTab<CR>
map zH :moveTabLeft<CR>
map zL :moveTabRight<CR>
map <C-*> :lastUsedTab<CR>

" Navigation
map <C-u> :scrollPageUp<CR>
map <C-d> :scrollPageDown<CR>

" }}}


